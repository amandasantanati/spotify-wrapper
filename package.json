{
  "name": "spotify-wrapper",
  "version": "1.0.0",
  "description": "A wrapper to work with Spotify Web API",
  "main": "src/index.js",
  "scripts": {
    "clear": "rimraf lib",
    "build": "npm run clear && ./node_modules/.bin/babel --out-dir lib src",
    "build:watch": "npm run build -- --watch",
    "build:umd": "./node_modules/.bin/webpack --output-filename spotify-wrapper.umd.js --mode development",
    "build:umd:min": "./node_modules/.bin/webpack --output-filename spotify-wrapper.umd.min.js --mode production",
    "lint": "./node_modules/.bin/eslint src/*.js",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require @babel/register",
    "test:tdd": "npm run test -- --watch",
    "test:coverage": "nyc npm run test"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  },
  "nyc": {
    "functions": 80,
    "lines": 80,
    "check-coverage": true,
    "reporter": [
      "text",
      "html"
    ]
  },
  "eslintIgnore": [
    "*.spec.js"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:amandasantanati/spotify-wrapper.git"
  },
  "keywords": [],
  "author": "Amanda Santana <amandasantanati@gmail.com> (http://amandasantanati.com.br/)",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/register": "^7.9.0",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^4.2.5",
    "mocha": "^7.1.2",
    "node-fetch": "^2.6.0",
    "nyc": "^15.0.1",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  }
}
